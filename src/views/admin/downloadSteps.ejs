<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Dashboard - Download Steps</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <style>
      body {
        background-color: #121212;
        color: #ffffff;
        height: 100%;
      }
      .navbar,
      .card,
      .list-group-item,
      .pagination .page-link,
      .btn {
        background-color: #1f1f1f;
        border-color: #333;
      }
      .navbar-brand,
      .nav-link,
      .form-label,
      .form-control,
      .form-select,
      .pagination .page-link,
      .btn {
        color: #ffffff;
      }
      .form-control,
      .form-select {
        background-color: #2c2c2c;
        border-color: #444;
      }
      .form-control::placeholder,
      .form-select::placeholder {
        color: #b3b3b3;
      }
      .btn:hover,
      .page-item.active .page-link {
        background-color: #333;
      }
      .form-control:focus,
      .form-select:focus {
        border-color: #666;
        box-shadow: none;
      }
    </style>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-dark mb-4">
      <div class="container-fluid">
        <a class="navbar-brand" href="#">Admin Dashboard</a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNav"
          aria-controls="navbarNav"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link" href="/admin/posts">Posts</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/admin/categories">Categories</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/admin/downloadSteps">Download Steps</a>
            </li>
          </ul>
          <form class="d-flex" action="/admin/logout" method="POST">
            <button class="btn btn-outline-danger" type="submit">Logout</button>
          </form>
        </div>
      </div>
    </nav>

    <div class="container">
      <h1 class="mb-4">Manage Download Steps</h1>

      <% if (downloadSteps.length > 0) { %>
      <ul class="list-group mb-4">
        <% downloadSteps.forEach(step => { %>
        <li class="list-group-item">
          <h2 class="h5">Custom URL: <%= step.customUrl %></h2>
          <form
            action="/admin/downloadSteps/edit/<%= step._id %>"
            method="POST"
            class="d-inline"
          >
            <div class="mb-3">
              <label class="form-label" for="customUrl">Custom URL</label>
              <input
                type="text"
                class="form-control"
                id="customUrl"
                name="customUrl"
                value="<%= step.customUrl %>"
                required
              />
            </div>
            <div class="mb-3">
              <label class="form-label" for="likeVideoLink"
                >Like Video Link</label
              >
              <input
                type="text"
                class="form-control"
                id="likeVideoLink"
                name="likeVideoLink"
                value="<%= step.likeVideoLink %>"
                required
              />
            </div>
            <div class="mb-3">
              <label class="form-label" for="subscribeYoutubeLink"
                >Subscribe YouTube Link</label
              >
              <input
                type="text"
                class="form-control"
                id="subscribeYoutubeLink"
                name="subscribeYoutubeLink"
                value="<%= step.subscribeYoutubeLink %>"
                required
              />
            </div>
            <div class="mb-3">
              <label class="form-label" for="destinationLink"
                >Destination Link</label
              >
              <input
                type="text"
                class="form-control"
                id="destinationLink"
                name="destinationLink"
                value="<%= step.destinationLink %>"
                required
              />
            </div>
            <button type="submit" class="btn btn-outline-primary">Edit</button>
          </form>
          <form
            action="/admin/downloadSteps/delete/<%= step._id %>"
            method="POST"
            class="d-inline"
          >
            <button type="submit" class="btn btn-outline-danger">Delete</button>
          </form>
        </li>
        <% }) %>
      </ul>
      <% } else { %>
      <p>No download steps found. Please add a new step.</p>
      <% } %>

      <h2 class="mb-4">Add New Download Step</h2>
      <form action="/admin/downloadSteps" method="POST">
        <div class="mb-3">
          <label for="customUrl" class="form-label">Custom URL</label>
          <input
            type="text"
            class="form-control"
            id="customUrl"
            name="customUrl"
            required
          />
        </div>
        <div class="mb-3">
          <label for="likeVideoLink" class="form-label">Like Video Link</label>
          <input
            type="text"
            class="form-control"
            id="likeVideoLink"
            name="likeVideoLink"
            required
          />
        </div>
        <div class="mb-3">
          <label for="subscribeYoutubeLink" class="form-label"
            >Subscribe YouTube Link</label
          >
          <input
            type="text"
            class="form-control"
            id="subscribeYoutubeLink"
            name="subscribeYoutubeLink"
            required
          />
        </div>
        <div class="mb-3">
          <label for="destinationLink" class="form-label"
            >Destination Link</label
          >
          <input
            type="text"
            class="form-control"
            id="destinationLink"
            name="destinationLink"
            required
          />
        </div>
        <button type="submit" class="btn btn-outline-success">
          Add Download Step
        </button>
      </form>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
