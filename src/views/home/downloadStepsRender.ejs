<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Complete the Steps</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
    />
    <style>
      body {
        background-color: #121212;
        color: #ffffff;
        font-family: Arial, sans-serif;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        margin: 0;
      }
      .steps-container {
        max-width: 500px;
        padding: 20px;
        background-color: #1f1f1f;
        border: 1px solid #6f6f6f;
        border-radius: 8px;
        text-align: center;
      }
      .steps-container h1 {
        margin-bottom: 20px;
        font-size: 1.5rem;
        font-weight: bold;
      }
      .steps-container ul {
        list-style-type: none;
        padding: 0;
      }
      .steps-container ul li {
        margin-bottom: 10px;
        transition: background-color 0.3s, color 0.3s;
      }
      .steps-container ul li:hover {
        background-color: #333;
        color: #00f;
      }
      .steps-container ul li a {
        color: #ffffff; /* Change link color to white */
        text-decoration: none; /* Remove underline from links */
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
        padding: 10px;
        transition: color 0.3s;
      }
      .steps-container ul li a:hover {
        text-decoration: none; /* Ensure no underline on hover */
        color: rgb(13, 255, 0);
      }
      .steps-container button {
        display: block;
        width: 100%;
        padding: 10px;
        background-color: #1f1f1f;
        border: 1px solid #474747;
        border-radius: 4px;
        color: #fff;
        font-size: 16px;
        cursor: not-allowed;
        margin-top: 20px;
        opacity: 0.5;
      }
      .steps-container button.enabled {
        cursor: pointer;
        opacity: 1;
      }
      .steps-container button:hover {
        background-color: #474747;
        border: 1px solid black;
        transition: 0.3s;
      }
      .custom-card {
        background-color: #1f1f1f;
        border: none;
        color: #fff;
      }
      .custom-card .card-header {
        background-color: #1f1f1f;
        border-bottom: 1px solid #333;
      }
      .custom-card .card-body {
        background-color: #1f1f1f;
      }
      .custom-card .btn {
        background-color: #007bff;
        border: none;
      }
      .custom-card .btn:hover {
        background-color: #0056b3;
      }
      .btn-outline-primary {
        border-color: #007bff;
        color: #007bff;
      }
      .btn-outline-primary:hover {
        background-color: #007bff;
        color: #fff;
      }
      .logo-text {
        font-size: 2rem;
        font-weight: bold;
        margin-bottom: 20px;
      }
      .content {
        text-align: center;
      }
      .steps-list {
        border: 1px solid #4c4c4c;
        padding: 10px;
        border-radius: 8px;
      }
      .steps-list a {
        color: #ffffff; /* Ensure link text color is white */
      }
      .steps-list-text {
        color: #ffffff;
      }
      .devider {
        height: 2px;
        width: 80%;
        background-color: #6f6f6f;
        margin: 20px auto; /* Center the divider */
      }
      .icon {
        width: 24px;
        height: auto;
      }
      .completed {
        border-color: rgb(13, 255, 0);
        color: rgb(13, 255, 0);
      }
      .completed a {
        color: rgb(13, 255, 0) !important;
      }
      .checkmark-icon {
        width: 24px;
        height: 24px;
      }
      .spinner-icon {
        width: 24px;
        height: 24px;
      }
    </style>
  </head>
  <body>
    <div class="content">
      <div class="steps-container">
        <h1><i class="fas fa-lock"></i> Complete the steps to proceed</h1>
        <div class="devider"></div>
        <ul id="steps-list">
          <li class="steps-list" id="task-1">
            <a
              href="#"
              onclick="completeTask(event, 'task-1', '<%= downloadSteps.subscribeYoutubeLink %>')"
              ><i class="fab fa-youtube icon"></i>
              <span>Subscribe to YouTube Channel</span></a
            >
          </li>
          <li class="steps-list" id="task-2">
            <a
              href="#"
              onclick="completeTask(event, 'task-2', '<%= downloadSteps.likeVideoLink %>')"
              ><i class="fas fa-thumbs-up icon"></i>
              <span>Like and Comment on the Video</span></a
            >
          </li>
        </ul>
        <div class="devider"></div>
        <form action="<%= downloadSteps.destinationLink %>" method="GET">
          <button type="submit" id="proceed-button" disabled>
            <strong><i class="fas fa-check proceed-button"></i> Proceed</strong>
          </button>
        </form>
      </div>
    </div>
    <script
      src="https://kit.fontawesome.com/a076d05399.js"
      crossorigin="anonymous"
    ></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
      const tasks = {
        "task-1": false,
        "task-2": false,
      };

      function completeTask(event, taskId, url) {
        event.preventDefault();
        if (!tasks[taskId]) {
          tasks[taskId] = true;
          const taskElement = document.getElementById(taskId);
          const icon = taskElement.querySelector("i");
          const text = taskElement.querySelector("span");
          const link = taskElement.querySelector("a");
          icon.outerHTML = `
            <svg class="spinner-icon" fill="none" stroke-width="1.5" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" d="M6.75 12a.75.75 0 1 1-1.5 0 .75.75 0 0 1 1.5 0ZM12.75 12a.75.75 0 1 1-1.5 0 .75.75 0 0 1 1.5 0ZM18.75 12a.75.75 0 1 1-1.5 0 .75.75 0 0 1 1.5 0Z"></path>
            </svg>`;
          text.textContent = "Checking...";

          window.open(url, "_blank");

          setTimeout(() => {
            const spinnerIcon = taskElement.querySelector("svg.spinner-icon");
            spinnerIcon.outerHTML = `
              <svg class="checkmark-icon" fill="none" stroke-width="1.5" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" d="m4.5 12.75 6 6 9-13.5"></path>
              </svg>`;
            text.textContent = "Completed";
            taskElement.classList.add("completed");
            link.classList.add("completed");
            checkAllTasksCompleted();
          }, 5000);
        }
      }

      function checkAllTasksCompleted() {
        const allCompleted = Object.values(tasks).every(
          (completed) => completed
        );
        const proceedButton = document.getElementById("proceed-button");

        if (allCompleted) {
          proceedButton.disabled = false;
          proceedButton.classList.add("enabled");
          proceedButton.style.cursor = "pointer";
        }
      }
    </script>
  </body>
</html>
